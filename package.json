{
  "name": "qml_tools",
  "displayName": "QML Tools",
  "description": "QML language support for Visual Studio Code",
  "keywords": [
    "qml",
    "formatter",
    "format"
  ],
  "version": "0.0.1",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#FFFFFF",
    "theme": "light"
  },
  "publisher": "parasharrajat",
  "preview": true,
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/parasharrajat/vscode-qml/issues"
  },
  "homepage": "https://github.com/parasharrajat/vscode-qml/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/parasharrajat/vscode-qml.git"
  },
  "engines": {
    "vscode": "^0.10.1"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "meta": {
    "id": "qls",
    "extension": "qmlTools"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "main": "./client/out/extension",
  "activationEvents": [
    "onLanguage:qml"
  ],
  "contributes": {
    "configuration": {
      "title": "QML Tools",
      "properties": {
        "qmlTools.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Formats the file on save."
        }
      }
    },
    "languages": [
      {
        "id": "qml",
        "extensions": [
          ".qml",
          ".qmlproject"
        ],
        "configuration": "./qml.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "qml",
        "scopeName": "source.qml",
        "path": "./syntaxes/qml.tmLanguage"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^14.0.1",
    "ts-loader": "^9.4.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "lodash": "^4.17.15"
  }
}
